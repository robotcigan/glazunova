.index-texts
  display flex
  justify-content center
  margin-bottom 6.4rem
  text-align center
  width 100%
  &__container
    max-width 72rem
  &__title
    color $second
    font-size 6.4rem
    line-height 1
    margin-bottom .25em
  &__subtitle
    margin-bottom 1.5em


.about-section
  &__title
    font-size 3.2rem
    font-weight 500
    line-height 1.3
    margin-bottom .5em
  &__text
    color $gray
  .container
    align-items center
  &__img
    img
      max-width 100%

.blockquote-section
  background-color $light-gray

.blockquote
  align-items center
  display flex
  flex-direction column
  padding 8rem 0
  &__title
    font-size 4rem
    font-weight 500
    line-height 1.2
    text-align center

.prem
  border-radius $radius
  display flex
  flex-direction column
  height 48rem
  justify-content space-between
  overflow hidden
  padding 5.6rem
  position relative
  &__img
    left 0
    position absolute
    top 0
    z-index -1
    imageShadow(.1)
  &__title
    font-size 4rem
    font-weight 600
    letter-spacing -1px
    max-width 40rem
    margin-bottom .5em
  &__text
    margin-bottom 0
    max-width 40rem
  &_static
    .prem
      &__title
        color #fff
      &__text
        color #fff
  &_animate
    background-color $light-gray
    .prem
      &__title
        max-width initial
        &:nth-child(2)
          font-size 2.4rem
          font-weight 500
          margin-bottom .75em
          opacity .4
        &:nth-child(3)
          font-size 2rem
          font-weight 500
          opacity .3



@media(max-width 1200px)
  h1.index-texts
    &__title
      font-size 4rem
      letter-spacing -1px
  .index-texts
    margin-bottom 1.6rem
    &__subtitle
      font-size 1.4rem


@media(max-width  767px)
  h1.index-texts
    &__title
      font-size 3.2rem
      letter-spacing -1px
  .about-section
    &__title
      font-size 2rem










