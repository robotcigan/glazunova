.index-texts
  display flex
  justify-content center
  margin-bottom 6.4rem
  text-align center
  width 100%
  &__container
    max-width 72rem
  &__title
    color $second
    font-size 6.4rem
    line-height 1
    margin-bottom .25em
  &__subtitle
    margin-bottom 1.5em


.about-section
  &__title
    font-size 3.2rem
    font-weight 500
    line-height 1.3
    margin-bottom .5em
  &__text
    color $gray
  .container
    align-items center
  &__img
    img
      max-width 100%

.blockquote-section
  background-color $light-gray

.blockquote-container
  display flex
  justify-content center

.blockquote
  align-items center
  display flex
  flex-direction column
  max-width 68rem
  padding 8rem 0
  &__title
    font-size 3.2rem
    font-weight 500
    line-height 1.4
    letter-spacing -1px
    margin-bottom 1em
    text-align center
  .specialist
    display flex
    &__photo
      border-radius 50%
      flex-shrink 0
      margin-bottom 1.6rem
      margin-right 1.6rem
      overflow hidden
      size(8rem)
    &__name
      font-size 1.4rem
    &__status
      font-size 1.2rem

.index-header
  align-items center
  border-bottom $border
  display flex
  justify-content space-between
  &__link
    color $primary
    font-size 1.4rem
    margin-bottom 1em
    a
      linkHover($primary)


.prem
  border-radius $radius
  display flex
  flex-direction column
  height 48rem
  justify-content space-between
  overflow hidden
  padding 5.6rem
  position relative
  &__img
    // display flex
    left 0
    position absolute
    size(100%)
    top 0
    z-index -1
    imageShadow(.1)
    img
      object-fit cover
      object-position center
      height 100%
      width 100%
  &__title
    font-size 4rem
    font-weight 600
    letter-spacing -1px
    max-width 40rem
    margin-bottom .5em
  &__text
    margin-bottom 0
    max-width 40rem
  &_static
    .prem
      &__title
        color #fff
      &__text
        color #fff
  &_animate
    background-color $light-gray
    .prem
      &__title
        max-width initial
        &:nth-child(2)
          font-size 2.4rem
          font-weight 500
          margin-bottom .75em
          opacity .4
        &:nth-child(3)
          font-size 2rem
          font-weight 500
          opacity .3


@media(max-width 1440px)
  .prem
    &__title
      font-size 3.2rem


@media(max-width 1200px)
  h1.index-texts
    &__title
      font-size 4rem
      letter-spacing -1px
  .index-texts
    margin-bottom 1.6rem
    &__subtitle
      font-size 1.4rem
  .about-section
    &__title
      font-size 2rem
  .prem
    height 36rem
    padding 3.2rem
    &__title
      font-size 2.8rem


@media(max-width 1000px)
  .about-section
    &__title
      font-size 1.6rem
  .blockquote
    &__title
      font-size 2.4rem
  .prem
    height 36rem
    padding 4rem
    &__title
      font-size 4rem

@media(max-width  767px)
  h1.index-texts
    &__title
      font-size 3.2rem
      letter-spacing -1px
  .about-section
    &__title
      font-size 2rem
  .blockquote-section
    background-color #fff
  .blockquote
    padding 4rem 0
    &__title
      font-size 2rem
  .prems
    .container
      grid-row-gap 0
  .prem
    border-radius 0
    height 32rem
    margin-bottom 0
    margin-left -2.4rem
    margin-right -2.4rem
    padding 2.4rem
    &__title
      font-size 2.8rem


@media(max-width 350px)
  .prem
    &__title
      font-size 2.4rem





