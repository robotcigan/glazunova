.vacancy
  margin-bottom 3.2rem
  &:not(:last-child)
    border-bottom $border
  &__container
    display flex
    justify-content space-between
  &__left
    max-width (736 / 1121 * 100)%
  &__right
    max-width (224 / 1121 * 100)%
    padding-top .4em
  &__price,
  &__time
    font-size 1.8rem
    font-weight 500
    margin-bottom .5em
  &__date
    display block
    margin-bottom 1em
  &__label
    color $gray
    font-size 1.4rem
    margin-bottom 1em


@media(max-width 767px)
  .vacancy
    &__container
      display block
    &__left,
    &__right
      max-width 100%
    &__right
      margin-bottom 2rem
      text-align left
      hr
        display none
    &__price,
    &__time
      font-size 1.6rem

