.spec-page
  align-items flex-start
  display flex
  justify-content space-between
  position relative
  &__left
    &-container
      // max-width 61rem
      padding-right 4rem
  &__img
    position sticky
    top 13rem
    width 100%
    img
      height 100%
      max-width 100%
      object-fit cover
      object-position top center
      width 100%
  &__title
    font-size 4.8rem
    margin-bottom .75em
  &__subs
    display flex
    margin-bottom 2em
  &__sub
    margin-bottom .5em
    &:not(:last-child)
      margin-right 1em
  &__btn-container
    align-items center
    border-top $border
    border-bottom $border
    display flex
    margin-bottom 3.2rem
    margin-top 2.4rem
    padding 4rem 0
    .btn
      flex-shrink 0
      margin-right 2.4rem
  &__prepay
    color $main
    font-size 1.6rem
    line-height 1.4

.spec-page
  &-xp-and-rating
    display flex
    margin-bottom 3em
    margin-top 1em
  &-xp
    align-items center
    display flex
    margin-right 4em
    &__number
      font-size 4rem
      margin-right .25em
  &-rating
    align-items center
    display flex
    &__number
      font-weight 500
      margin-right .5em


.diplom
  display block
  &__img
    align-items center
    background-color $light-gray
    display flex
    justify-content center
    height 32rem
    margin-bottom 2.4rem
    position relative
    &:after
      align-items center
      background-color $primary
      border-radius 50%
      bottom 0
      content url('../../img/zoom.svg')
      display flex
      justify-content center
      left 0
      margin auto
      opacity 0
      position absolute
      right 0
      size(6.4rem)
      top 0
      transform translateY(1rem)
      transition $transition
    img
      max-height 24rem
      max-width 20rem
  &__title
    margin-bottom 1em
  &__year
    font-size 1.4rem
    font-weight 500
  &:hover
    .diplom
      &__img
        &:after
          opacity 1
          transform none



@media(max-width 1200px)
  .spec-page
    &__left
      &-container
        max-width initial
    &__title
      font-size 3.2rem
    .labels
      margin-bottom 1em
    .label
      font-size 1.4rem
    &__subs
      display block
    &__prepay
      font-size 1.4rem
    &__img
      top 8.8rem


@media(max-width 1000px)
  .spec-page
    flex-direction column
    margin-top -4rem
    &__left
      min-height initial
      &-container
        max-width initial
        padding-right 0
    &__right
      order -1
      margin-bottom 4rem
      position initial
      width 100%
    &__img
      height 50rem
      position initial
      top 0
      img
        object-position top
    &__subs
      display flex
    .labels
      display flex
      .label
        margin-right 1em
    &__btn-container
      padding 2.4rem 0


@media(max-width 767px)
  .spec-page
    &__right
      margin-bottom 2.4rem
    &__img
      height 32rem
    .labels
      display block
    &__subs
      display block
    &__btn-container
      display block
      .btn
        margin-bottom 1em
    &-xp
      margin-right 2.4rem
      &__text
        font-size 1.4rem
  .education-section
    .container
      grid-row-gap 0











