.spec-page
  display flex
  height 100vh
  position relative
  &__left
    &-container
      max-width 61rem
  &__right
    // height calc(100vh - 126px)
    height 100vh
    overflow hidden
    position fixed
    right 0
    top calc(0rem - var(--header-margin-bottom))
    width 50%
    img
      height calc(100% - 8.6rem)
      object-fit cover
      width 100%
  &__title
    font-size 4.8rem
  &__subs
    display flex
    margin-bottom 1.6rem
  &__sub
    margin-bottom .5em
    &:not(:last-child)
      margin-right 1em
  &__btn-container
    align-items center
    display flex
    margin-bottom 3.2rem
    margin-top 2.4rem
    .btn
      flex-shrink 0
      margin-right 2.4rem
  &__prepay
    color $main
    font-size 1.6rem
    line-height 1.4



.diplom
  display block
  &__img
    align-items center
    background-color $light-gray
    display flex
    justify-content center
    height 32rem
    margin-bottom 2.4rem
    position relative
    &:after
      align-items center
      background-color $primary
      border-radius 50%
      bottom 0
      content url('../../img/zoom.svg')
      display flex
      justify-content center
      left 0
      margin auto
      opacity 0
      position absolute
      right 0
      size(6.4rem)
      top 0
      transform translateY(1rem)
      transition $transition
  &__title
    margin-bottom 1em
  &__year
    font-size 1.4rem
    font-weight 500
  &:hover
    .diplom
      &__img
        &:after
          opacity 1
          transform none
