.attention
  border $border
  border-radius $radius
  opacity 0
  padding 2.4rem
  padding-right 5.6rem
  position relative
  for num in 2..3
    &:nth-child({num})
      transition-delay ((num - 1) / 10) s
  &:not(:last-child)
    margin-bottom 2.4rem
  p
    margin-bottom 0
  &:after
    align-items center
    background-color #fff
    border-radius 50%
    border $border
    content url('../../img/attention.svg')
    display flex
    filter grayscale(100%)
    flex-shrink 0
    justify-content center
    position absolute
    right 2rem
    top 2rem
    size(3.2rem)
  &_red
    border 1px solid rgba($error, .3)
    &:after
      filter none
    p
      color $error

