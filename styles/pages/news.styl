.new
  display flex
  border-bottom $border
  padding 3.2rem 0
  &__img
    align-items center
    display flex
    justify-content center
    margin-right 4.8rem
    size(18rem, 24rem)
  &__date
    margin-bottom .5em
  &__title
    font-size 2.4rem
    font-weight 500
    line-height 1.6
    margin-bottom .5em
    linkHover($primary)
    &:before
      bottom 0
  &__link
    linkHover($primary)









.news-detail
  &__title
    font-size 3.2rem
    line-height (40 / 32)
    margin-bottom .5em
  .specialist
    // display flex
    &__photo
      border-radius 50%
      flex-shrink 0
      margin-bottom 1.6rem
      overflow hidden
      size(8rem)
    &__name
      font-size 1.4rem
    &__status
      font-size 1.2rem
  &__views
    color $gray
    font-size 1.4rem
  &__share
    color $gray
    font-size 1.4rem
    margin-bottom .5em