.about-top
  &__img
    margin-bottom 2rem
    img
      width 100%
  &__slogan
    font-size 2rem
    font-weight 500


.quote-slider
  background-color #E8E7E5
  border-radius $radius
  overflow hidden
  &__container
    display flex
    // transition opacity ease 1s
    // transition $transition2

.quote
  display flex
  flex-shrink 0
  // opacity 0
  justify-content center
  opacity 0
  position relative
  transition opacity .5s ease
  width 100%
  &:nth-child(2)
    z-index 10
  &_active
    opacity 1 !important
    .quote
      &__progress
        circle
          animation quoteProgress 5s infinite linear
  &__bg
    background-color #E8E7E5
    left 0
    position absolute
    size(100%)
    top 0
    z-index -1
  // &__img
  //   align-items flex-end
  //   display flex
  //   height 72rem
  &__text
    font-size 2.4rem
    font-weight 500
    line-height 1.4
    left 6.4rem
    max-width 41rem
    position absolute
    top 6.4rem
  &__progress
    position absolute
    circle
      // animation quoteProgress 4s infinite linear
      fill none
      stroke-dasharray 250
      // stroke-dashoffset 250
      // transition stroke-dashoffset ease 1.1s
  &__next
    align-items center
    // background-color $primary
    border-radius 50%
    circleHover(8.8rem, $primary, $primary - 10%)
    cursor pointer
    display flex
    justify-content center
    size(8.8rem)
    position absolute
    right 6.4rem
    top 6.4rem
    z-index 10
    // &:hover
    //   .quote
    //     &__progress
    //       circle
    //         stroke-dashoffset 0
  &__person
    bottom 6.4rem
    left 6.4rem
    max-width 40rem
    position absolute
  &__name
    font-weight 500
    margin-bottom .4em
  &__position
    color $gray
    font-size 1.4rem
    line-height 1.6


@keyframes quoteProgress
  0%
    stroke-dashoffset 250
  100%
    stroke-dashoffset 0



.effect
  overflow hidden
  &__wrapper
    animation hero 40s infinite linear
    display flex
  &__column
    display flex
    margin-right 8rem
  &__img
    margin-bottom 1.6rem
    overflow hidden
    size(20rem)
  &__item
    // margin-right 12rem
    &_square
      margin-left -4rem
      margin-top 32rem
      .effect
        &__img
          size(24rem)
    &_small
      margin-right -20rem
      margin-top 48rem
      .effect
        &__img
          size(20rem, 26rem)
    &_vertical
      margin-left -9.6rem
      margin-top 20rem
      .effect
        &__img
          size(60rem, 48rem)
    &_horizontal
      .effect
        &__img
          size(32rem, 48rem)
      &-bottom
        margin-left -8rem
        margin-top 28rem
    img
      height 100%
      object-fit cover
      width 100%
  &__text
    line-height 1.6


@keyframes effect
  0%
    transform translateX(0)
  100%
    transform translateX(-100%)


.structure
  background-color #DEE6EB
  border-radius $radius
  display flex
  flex-direction column
  justify-content space-between
  height 20rem
  padding 3.2rem
  &__name
    font-size 2rem
    font-weight 500
  &__count
    color $gray
    font-size 1.4rem


.about-photos
  background-color $light-gray
  padding 16rem 0
  &__texts
    margin-bottom 3.2rem
  &__blockquote
    &-text
      font-size 2rem
      line-height (32 / 20)
      letter-spacing -.5px
      margin-bottom 1em
  .specialist
    display flex
    &__photo
      border-radius 50%
      flex-shrink 0
      margin-right 1.2rem
      overflow hidden
      size(6.4rem)
    &__name
      font-size 1.4rem
    &__status
      font-size 1.2rem
  &__item
    border-radius $radius
    overflow hidden
    & + .about-photos__item
      margin-top 3.2rem
    img
      width 100%


@media(max-width 1440px)
  .quote
    &__img
      img
        max-width 60rem
    &__text
      font-size 2rem
  .effect
    &__item
      &_square
        margin-left -4rem
        margin-top 32rem
        .effect
          &__img
            size(16rem)
      &_small
        margin-right -20rem
        margin-top 48rem
        .effect
          &__img
            size(16rem, 22rem)
      &_vertical
        margin-left -9.6rem
        margin-top 20rem
        .effect
          &__img
            size(52rem, 40rem)
      &_horizontal
        .effect
          &__img
            size(24rem, 40rem)
        &-bottom
          margin-left -8rem
          margin-top 28rem
    &__text
      font-size 1.4rem


@media(max-width 1200px)
  .quote
    justify-content flex-end
    &__text
      left 3.2rem
      top 3.2rem
    &__person
      bottom 3.2rem
      left 3.2rem
    &__next
      right 3.2rem
      size(4.8rem)
      top 3.2rem
      &:before
        size(4.8rem)
      &:after
        size(5.6rem)
    &__progress
      circle
        stroke rgba($primary, .3)
    &__img
      margin-right 2.4rem
      img
        max-width 48rem
  .effect
    &__wrapper
      animation hero 20s infinite linear
    &__column
      margin-right 4rem
    &__img
      size(16rem)
    &__item
      &_square
        margin-left -4rem
        margin-top 24rem
        .effect
          &__img
            size(16rem)
      &_small
        margin-right -16rem
        margin-top 32rem
        .effect
          &__img
            size(16rem, 22rem)
      &_vertical
        margin-left -4rem
        margin-top 12rem
        .effect
          &__img
            size(40rem, 28rem)
      &_horizontal
        .effect
          &__img
            size(20rem, 28rem)
        &-bottom
          margin-left -8rem
          margin-top 28rem
    &__text
      font-size 1.2rem
  .about-photos
    padding 8rem 0
    &__title
      font-size 2.4rem
    &__item
      & + .about-photos__item
        margin-top 2rem



@media(max-width 1000px)
  .quote
    &__text
      font-size 1.6rem
      max-width 32rem
    &__img
      img
        max-width 44rem
    &__name
      font-size 1.4rem
      line-height 1.4
      max-width 24rem
    &__position
      font-size 1.2rem
  .structure
    height 14rem
    padding 2rem
    &__name
      font-size 1.8rem
    &__count
      font-size 1.2rem



@media(max-width 767px)
  .quote-slider
    margin-left -2.4rem
    margin-right -2.4rem
  .quote
    // display block
    flex-direction column
    &__img
      order -1
      margin-right 0
      margin-top 4.8rem
      img
        max-width 100%
    &__text
      background-color #e8e7e5 - 5%
      padding-left 2.4rem
      // margin-top 2.4rem
      max-width initial
      position initial
      padding-bottom 2rem
      padding-right 2.4rem
      padding-top 2rem
    &__person
      // background-color #fff
      // padding-left 2.4rem
      // padding-top 1.6rem
      // position initial
      left 2.4rem
      top 2.4rem
    &__position
      display none
  .effect
    &__wrapper
      animation hero 10s infinite linear
    &__column
      margin-right 2.4rem
    &__img
      size(12rem)
    &__item
      &_square
        margin-left -4rem
        margin-top 24rem
        .effect
          &__img
            size(12rem)
      &_small
        margin-right -16rem
        margin-top 28rem
        .effect
          &__img
            size(12rem, 18rem)
      &_vertical
        margin-left -4rem
        margin-top 12rem
        .effect
          &__img
            size(22rem, 16rem)
      &_horizontal
        .effect
          &__img
            size(16rem, 24rem)
        &-bottom
          margin-left -8rem
          margin-top 28rem 