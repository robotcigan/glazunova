.review-website
  align-items center
  display flex
  margin-bottom 1em
  &__name
    min-width 16rem

.review
  background-color $light-gray
  display flex
  justify-content space-between
  margin-bottom 3.2rem
  padding 4.8rem
  &__left
    width 20%
  &__center
    width 70%
  &__right
    padding-top 4px
    width 12rem
  &__name
    font-weight 500
    line-height 1.5
    margin-bottom .75em
  &__stars
    display flex
  &__star-disabled
    filter grayscale(1)
    opacity .3

.form-control_stars
  .list
    li
      color $primary
  .current
    color $primary

@media(max-width 1000px)
  .review
    padding 3.2rem


@media(max-width 767px)
  .review
    background-color transparent
    border-bottom $border
    display block
    margin-bottom 2.4rem
    padding 0
    padding-bottom 2.4rem
    &__left
      width 100%
    &__center
      width 100%
    &__right
      width 100%
    &__date
      margin-bottom 1em
    &__img
      margin-top 1.6rem


