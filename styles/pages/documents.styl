.document
  display block
  margin-bottom 3.2rem
  &__img
    border $border
    border-radius $radius
    margin-bottom 2.4rem
    padding 4.8rem
    position relative
    &:after
      align-items center
      background-color $primary
      border-radius 50%
      bottom 0
      content url('../../img/zoom.svg')
      display flex
      justify-content center
      left 0
      margin auto
      opacity 0
      position absolute
      right 0
      size(6.4rem)
      top 0
      transform translateY(1rem)
      transition $transition
    img
      border-radius $radius - 2
      width 100%
  &__ex
    color $gray
    font-size 1.4rem
    margin-bottom .5em
  &__name
    font-size 1.4rem
    line-height 1.6
    transition $transition
  &:hover
    .document
      &__name
        color $primary
      &__img
        &:after
          opacity 1
          transform none

.file
  display flex
  &__icon
    margin-right 1.6rem
  &__ex
    color $gray
    font-size 1.2rem
    margin-bottom .5em
  &__name
    font-size 1.4rem
    line-height 1.4
    transition $transition
  &:hover
    .file
      &__name
        color $primary



@media(max-width 1200px)
  .document
    &__img
      padding 2.4rem
  .file
    &__name
      font-size 1.2rem





