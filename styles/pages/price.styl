.price
  display flex
  margin-bottom 3.2rem
  &__person
    align-items center
    border $border
    border-right none
    display flex
    flex-direction column
    // justify-content center
    padding-top 3.2rem
    text-align center
    width 24rem
  &__ava
    border-radius 50%
    overflow hidden
    margin-bottom 1.2rem
    size(9.6rem)
  &__name
    margin-bottom .4em
  &__content
    border $border
    padding 2.4rem 3.2rem
    width 100%
  &__line
    display flex
    justify-content space-between
    padding 1em 0
    transition $transition
    &:not(:last-child)
      border-bottom $border
    &-right
      display flex
      flex-shrink 0
    &:hover
      background-color $light-gray
  &__service
    line-height 1.4
    margin-right 2em
  &__time
    font-weight 500
    margin-right 2em
  &__cost
    font-weight 500



@media(max-width 1200px)
  .price
    margin-bottom 2.4rem
    &__person
      padding-top 1.6rem
      width 20rem
    &__ava
      size(6.4rem)
    &__name,
    &__secondname
      font-size 1.4rem
    &__content
      padding 1.6rem
    &__line
      font-size 1.4rem
    &__time
      margin-right 1em
    &__service
      margin-right 1em


@media(max-width 767px)
  .price
    display block
    margin-bottom 3.2rem
    &__person
      border none
      border-bottom $border
      border-color rgba($second, .5)
      flex-direction initial
      padding 0
      padding-bottom 1.6rem
      text-align initial
      width 100%
    &__ava
      margin-bottom 0
      margin-right .8rem
      size(4.8rem)
    &__content
      border none
      padding 0
    &__line
      display block
    &__service
      margin-bottom .5em
      margin-right 0










