.promo-modal
  background-color #fff
  box-shadow 0px 0px 108px rgba(0, 0, 0, 0.25)
  border-radius 16px
  bottom 1.6rem
  // left 1.6rem
  margin-left 1.6rem
  overflow hidden
  position fixed
  right 1.6rem
  max-width 34rem
  z-index 100
  &__img
    border-radius 16px
    height 22rem
    overflow hidden
    margin-bottom .2rem
    img
      object-fit cover
      height 100%
      width 100%
  &__container
    padding 1.6rem
    text-align center
  &__title
    font-size 2rem
    font-weight 600
    margin-bottom .5em
  &__text
    color $gray
  &__close
    cursor pointer
    position absolute
    right .8rem
    top .8rem
  &_hide
    display none