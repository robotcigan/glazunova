.hero
  height 100vh
  overflow hidden
  position relative
  width 100%
  &__action
    left 0
    position absolute
    top 0
    size(100%)
  &__video
    background-color $main
    clip-path url(#video-mask)
    height 100%
    position relative
    width 100%
    z-index 20
    &:after
      background-color rgba(black, .3)
      content ''
      height 100%
      left 0
      position absolute
      top 0
      width 100%
      z-index 10
    video
      display block
      height 100%
      object-fit cover
      // opacity 0
      position relative
      width 100%
      z-index 10
  &__camera
    // opacity 0
    position absolute
    z-index 0
    // left -50%
    // size(200%)
    // top -50%
    left 0
    size(100%)
    top 0
    // right 0
    // margin auto
    img
      width 100%
    svg
      #video-mask
        rect
          // width 888px
          // height 556px
          height 100vh
          width 100vw
          // x 516px
          // y 322px
  &__align
    align-items center
    display flex
    height 100%
    left 0
    position absolute
    top 0
    width 100%
    z-index 20
  &__container
    flex-shrink 0
    width 100%
    // margin-top 30rem
  &__title
    color #fff
    font-size 8rem
    font-weight 700
    line-height 1
    max-width 56rem
    margin-bottom .25em
  &__subtitle
    color #fff
    margin-bottom 1.5em



@media(max-width 1200px)
  .hero
    margin-bottom 8rem
    &__title
      font-size 4.8rem



@media(max-width 767px)
  .hero
    &__align
      align-items flex-end
    &__container
      padding-bottom 12rem
      text-align center
    &__title
      font-size 4rem
    &__subtitle
      margin-bottom 1em


