.footer
  border-top $border
  // bottom 0
  // padding 8rem 0
  padding-top 8rem
  // position fixed
  // width 100%
  // z-index -1
  .logo
    img
      max-width 14.8rem
  &__link
    font-size 1.6rem
    margin-bottom 1.2em
    position relative
    transition $transition
    a
      display block
      font-size 1.4rem
      linkHover($primary)
      transition $transition
  &__right
    // display flex
    // justify-content flex-end
    text-align right
  &__phone
    display block
    // font-weight 500
    margin-bottom 1em
  &__mail
    color $primary
    display block
    // font-size 2.4rem
    linkHover($primary)
    margin-bottom 1.5em
  &__bottom
    align-items center
    border-top $border
    color $gray
    display flex
    font-size 1.4rem
    justify-content space-between
    margin-top 8rem
    padding 2em 0
    &-links
      display flex
      .footer
        &__link
          margin-bottom 0
          &:not(:last-child)
            margin-right 1em
    // padding-top 3.2rem

.copyright
  flex-shrink 0
  width 33%

.madeby
  a
    color $main
    linkHover($primary)


@media(max-width 1200px)
  .footer
    &__right
      text-align left
    .socials
      margin-bottom 1.6rem
    &__bottom
      display block
      &-links
        margin-bottom .5em
    .copyright
      margin-bottom .5em


@media(max-width 1000px)
  .footer
    &__bottom
      font-size 1.4rem
  .disclamer
    font-size 1.4rem


@media(max-width 767px)
  .footer
    padding 4rem 0
    &__bottom
      display block
      margin-top 1.6rem
    &__link
      font-size 1.4rem
      margin-bottom 1em
  .copyright,
  .disclamer
    margin-bottom 1em
    text-align left
    width 100%








