.form
  background-color $light-gray
  padding 8rem 0
  .wrapper
    padding-left 0 !important
    padding-right 0 !important
  &__container
    align-items center
    display flex
    justify-content space-between
  &__left
    width 60rem
  &__right
    display flex
  &__person
    border-radius 50%
    flex-shrink 0
    overflow hidden
    size(36rem)
    img
      width 100%
  &_sign-page
    background-color #fff
    padding 0

.form-message
  align-items flex-end
  display flex
  flex-direction column
  margin-right 3.2rem
  // justify-content flex-end
  width 35rem
  &__text
    background-color $primary-light
    margin-bottom 2.4rem
    padding 3.2rem 4rem
    transition $transition2
    // transition-delay 4s
    // &:first-child
    //   border-radius 32px 32px 0 32px
    // &:last-child
    //   border-radius 32px 0 32px 32px
    // &:not(:last-child)
    //   margin-bottom 2.4rem
    p
      margin-bottom 0
    svg
      max-width 100%
      #message-circle-1
        animation message-img 2s infinite ease
      #message-circle-2
        animation message-img 2s infinite ease .3s
      #message-circle-3
        animation message-img 2s infinite ease .7s
    &_first
      border-radius 32px 32px 0 32px
    &_loading
      border-radius 32px 0 32px 32px
      transition-delay 4s
    &_second
      border-radius 32px 0 32px 32px
      display none
      opacity 0
      // transform translateY(1rem)
      // transition-delay 4s


.form
  &.animated
    .form-message
      &__text
        &_loading
          opacity 0
          // height 0
          margin 0
          padding 0
          transform scale(0)
        &_second
          animation formMessage 1s 5s forwards
          display block
          // opacity 1
          // transform none


@keyframes message-img
  0%
    transform none
    opacity .3
  50%
    opacity 1
    transform translateY(-8px)
  100%
    transform none
    opacity .3


@keyframes formMessage
  0%
    opacity 0
    transform translateY(2rem)
  100%
    opacity 1
    transform none


@media(max-width 1440px)
  .form
    &__left
      width 46%
    &__right
      width 50%
    &__person
      size(24rem)

@media(max-width 1200px)
  .form
    padding-bottom 4rem
    padding-top 4rem
    &__container
      align-items initial
    &__left
      width 60%
    &__right
      align-items flex-end
      flex-direction column
      width 38%
    &__person
      margin-right 0
      size(8rem)
  .form-message
    margin-right 0
    width 100%
    &__text
      font-size 1.4rem
      padding 1rem 1.8rem
      p
        font-size 1.4rem
      &_first
        border-radius 8px 8px 0 8px
      &_second,
      &_loading
        border-radius 8px 0 8px 8px
      &_loading
        svg
          transform scale(.7)
      &:not(:last-child)
        margin-bottom .8rem

