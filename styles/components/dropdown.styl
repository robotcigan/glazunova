.dropdown
  background-color #fff
  border-top $border
  box-shadow 0px 14px 20px -3px rgba($main, .1)
  left 0
  opacity 0
  position absolute
  pointer-events none
  // bottom 0
  // top 8.4rem
  // top 0
  transition $transition
  width 100%
  &__container
    display flex
    padding-bottom 4rem
    padding-top 4rem
  &__left
    flex-shrink 0
    min-width 18.5rem
    // min-width 29rem
  &__title
    color $gray
    font-size 1.4rem
  &__nav
    flex-shrink 0
    min-width 28rem
  &__nav-link
    cursor pointer
    display block
    font-size 1.4rem
    margin-bottom 2em
    a
      linkHover($primary)
    &_active
      color $primary
  &__link
    opacity 0
    margin-bottom 1em
    itemsDelay(2)
    transition $transition
    transform translateY(.5em)
    a
      display block
      font-size 1.4rem
      margin-right 1.5em
      transition $transition
      linkHover($primary)
  &__specialists
    display none
    &_active
      animation dropdownSpecialist .4s ease
      display block
  .specialist
    display flex
    &__photo
      border-radius 50%
      flex-shrink 0
      margin-right 1.2rem
      overflow hidden
      size(6.4rem)
    &__name
      font-size 1.4rem
    &__status
      font-size 1.2rem



@keyframes dropdownSpecialist
  from
    opacity 0
    transform translateY(.5rem)
  to
    opacity 1
    transform none







