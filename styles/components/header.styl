.header
  background-color #fff
  left 0
  margin-bottom 5rem
  position sticky
  top 0
  width 100%
  z-index 100
  &__progress
    background-color $primary
    height 2px
    left 0
    position absolute
    top 0
    width 0
  &__container
    align-items center
    display flex
    justify-content space-between
    padding-bottom 1.2rem
    padding-top 1.2rem
    transition $transition2
  &__left
    align-items center
    display flex
  &__right
    align-items center
    display flex
  &__phone
    font-weight 500
    margin-right 1.2rem
    &-container
      align-items center
      display flex
      margin-right 2.4rem
      position relative
  .logo
    flex-shrink 0
    max-width 20rem
    margin-right 2.4em



.nav
  display flex
  &__link
    position relative
    transition $transition
    &:after
      background-color $primary
      bottom 1px
      content ''
      height 1px
      left 0
      position absolute
      transition $transition
      width 0
    &:hover
      &:after
        width 100%
    &:not(:last-child)
      margin-right 1em
    a
      color $main
      display flex
      font-size 1.4rem
      padding 2.4rem 0
      position relative


.burger
  display none
  position relative
  transition $transition
  transform translateY(-4px)
  width 3.2rem
  &:before,
  &:after
    background-color $main
    content ''
    height 2px
    position absolute
    top 0
    transition all .3s ease
    width 3.2rem
  &:after
    top 8px
  &_active
    transform translate(8px, -4px)
    &:before
      transform rotate(45deg) translateY(6px)
      width 2.4rem
    &:after
      transform rotate(-45deg) translateY(-6px)
      width 2.4rem

.mobile-menu
  background-color $main
  left 0
  display none
  position fixed
  size(100%)
  top 0
  z-index 100
  &__container
    padding 7.2rem 2.4rem
  &__nav
    margin-bottom 1.2em
  &__link
    color #fff
    font-size 1.3rem
    font-weight 400
    margin-bottom .7em
    opacity 0
    transition $transition2
    transform translateY(-2rem)
    for num in (1..12)
      &:nth-child({num})
        transition-delay (num / 30) s
    &_big
      font-size 2rem
      font-weight 700
      margin-bottom .4em
    &-section
      display flex
      justify-content space-between
      width 100%
    &-container
      display none
      margin-bottom .5em
      margin-top .5em
  &-accordion
    position relative
    .mobile-menu__link_big
      display inline-block
      // position relative
      &:after
        content url('/assets/img/mobile-accordion.svg')
        display inline-block
        transform translateY(5px)
        transition $transition
      &_active
        &:after
          transform rotate(180deg)
  &__phone-container
    align-items center
    display flex
    margin-bottom 2rem
  &__phone
    color #fff
    font-size 2rem
    margin-right .5em
  .messengers
    .messenger
      height 2.4rem
  &_active
    .logo
      svg
        #logo-mediaheads
          fill #fff
        #logo-sub
          fill #fff
    .mobile-menu
      &__link
        opacity 1
        transform none



@keyframes logoHoverAnimation
  0%
    opacity 0
  100%
    opacity 1


@media(max-width 1800px)
  .header
    &__container
      padding-bottom 0
      padding-top 0
    &__phone
      &-container
        margin-right 1.6rem
    .logo
      margin-right 4rem
  .nav
    justify-content initial
    position initial
    top 0
    &__link
      &:after
        bottom -1px

@media(max-width 1600px)
  .header
    .logo
      max-width 16rem
    .btn
      padding 1.4rem .9rem
    .messengers
      .messenger
        size(2.4rem)
  .nav
    &__link
      &:not(:last-child)
        margin-right .8em

@media(max-width 1440px)
  .header
    .logo
      margin-bottom -1rem
      margin-right 2.4rem
      max-width 14rem
      svg
        #logo-sub
          display none
    &__phone
      margin-right .8rem
  .nav
    &__link
      a
        font-size 1.6rem
        letter-spacing 0
        text-transform initial
        padding-bottom 2.2em
        padding-top 2.2em
      &-number
        display none


@media(max-width 1250px)
  .header_index
    .logo
      #logo-mediaheads
        fill #fff
  .burger
    display block
  .header
    &__container
      padding-bottom 1rem
      padding-top 1rem
    &__contacts
      .btn
        display none
  .nav
    display none

@media(max-width 767px)
  .header
    &__phone-container
      display none



