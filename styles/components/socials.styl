.social
  align-items center
  // background-color teal
  // border 2px solid $main
  border-radius 50%
  size(7.2rem)
  display inline-flex
  justify-content center
  margin-bottom 1.6rem
  position relative
  &:before,
  &:after
    // background-color $main
    border-radius 50%
    bottom 0
    content ''
    left 0
    margin auto
    position absolute
    right 0
    top 0
    transition $transition
    z-index 0
  &:before
    border 2px solid $main
    opacity .1
    size(5.6rem)
  &:after
    background-color $main
    size(0)
  &:not(:last-child)
    margin-right .8rem
  img
    position relative
    z-index 10
