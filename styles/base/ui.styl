.btn
  border none
  background-color $primary
  border-radius 40px
  align-items center
  color #fff
  cursor pointer
  display inline-flex
  font-family $font
  font-size 1.6rem
  // font-weight 500
  justify-content center
  line-height 1
  // letter-spacing -.2px
  max-height 6.4rem
  overflow hidden
  padding 2.4rem 4rem
  position relative
  vertical-align bottom
  &:before
    background-color $primary - 7%
    content ''
    left 0
    height 100%
    position absolute
    top 0
    transition $transition
    width 0
    z-index 0
  &__text
    position relative
    transition $transition
    z-index 10
    &:nth-child(2)
      opacity 0
      position absolute
      transform translateY(100%)
  &_ghost
    background-color transparent
    &:before
      display none
    .btn
      &__text
        color $primary
  &:hover
    &:before
      width 100%
    .btn
      &__text
        &:nth-child(1)
          opacity 0
          transform translateY(-100%)
        &:nth-child(2)
          opacity 1
          transform none
  &--small
    padding 1.6rem 2.4rem
  &--transparent
    background-color rgba(#fff, .2)
  &--full
    width 100%
  & + &
    margin-left 2rem
  & + .slider
    margin-top 3.2rem


.form-control
  margin-bottom 2rem
  position relative
  width 100%
  label,
  &__label
    color $main
    cursor text
    display inline-block
    line-height 1
    font-weight 400
    margin-bottom .75em
    transition all .2s
    max-width 100%
  input[type="text"],
  input[type="password"],
  input[type="date"],
  input[type="email"],
  input[type="tel"],
  input[type="number"],
  select,
  textarea,
  .custom-select
    background #fff
    border none
    border $border
    border-radius $radius
    color $main
    display block
    font-family $font
    font-size 1.6rem
    line-height 1
    min-height 5rem
    transition border-color .2s
    padding 2rem 2.4rem
    position relative
    transition $transition
    resize vertical
    width 100%
    -webkit-appearance none
    &:hover
      border-color #DBE1E9 - 10%
  textarea
    height 100%
    min-height 18rem
  .nice-select
    float initial
    height initial
    .list
      width 100%
    &.open .list
      transform none
    .option
      font-size 1.2rem
      line-height 1.6
      margin 0
      margin-left 0 !important
      min-height initial
      // padding-left 0
      padding .5em 1em
    &:after
      right 2.4rem
  &--error
    input[type="text"],
    input[type="password"],
    input[type="date"],
    input[type="email"],
    input[type="tel"],
    input[type="number"],
    select,
    textarea,
    .select2-selection--single
      border-color $error
    label
      color $error
    .form-input__icon
      color $error
  &--small
    width 28rem
  &--horizontal
    align-items center
    display flex
    label
      flex-shrink 0
      margin-bottom 0
      width 16rem
    // input
    //   width 50%



.tabs
  &__header
    display flex
    justify-content center
    margin-bottom 3.2rem
  &__link
    align-items center
    background-color #fff
    cursor pointer
    // display block
    display flex
    font-size 1.6rem
    justify-content center
    // opacity .5
    padding 1em
    padding-top 0
    position relative
    text-align center
    transition $transition
    &:before,
    &:after
      background-color #DDEBF1
      bottom 0
      content ''
      height 1px
      left 0
      position absolute
      transition $transition
      width 100%
      z-index 0
    &:after
      background-color $primary
      width 0
      z-index 10
    // &:not(:last-child)
    //   margin-right 2.4rem
    &_active,
    &:hover
      &:after
        width 100%
    span
      line-height 1.2
      position relative
      white-space nowrap
      z-index 1
  &__content
    background-color #fff
    display none
    // padding-bottom 6.4rem
    img
      max-width 100%
    &_active
      animation tabs .3s ease
      display block

@keyframes tabs
  from
    opacity 0
    transform translateY(.5rem)
  to
    opacity 1
    transform none


.checkbox
  align-items center
  cursor pointer
  display flex
  margin-bottom 1em
  user-select none
  &__label
    background transparent
    border-radius $radius
    border $border
    cursor pointer
    circle(1.8rem)
    display inline-block
    flex-shrink 0
    margin-right .4rem
    position relative
    transform translateY(-1px)
    z-index 1
    &:after
      color $main
      // content "\f00c"
      content url('../../img/checkbox.png')
      display none
      // font-family 'FontAwesome'
      font-size 1.3rem
      left 2px
      position absolute
      top 2px
      z-index 10
  &__text
    display inline-block
  .link
    display inline-block
    margin-bottom 0
  input
    display none
  input:checked + .checkbox__label
    // border-color $primary
    &:after
      display block

.radio
  cursor pointer
  display block
  margin-bottom 1rem
  user-select none
  &__label
    background transparent
    border-radius 50%
    border 1px solid $light-gray - 10%
    cursor pointer
    circle(2.4rem)
    display inline-block
    margin-right 1rem
    position relative
    vertical-align middle
    z-index 1
    &:after
      background-color $primary
      border-radius 50%
      circle(1.4rem)
      color #fff
      content ''
      display none
      font-size 1.5rem
      left 4px
      position absolute
      top 4px
      z-index 10
  input
    display none
  input:checked + .radio__label
    background-color #fff
    border-color $primary
    box-shadow 0 0 0 1px $primary
    &:after
      display block
  label
    color $main
    display inline-block
    cursor pointer
    vertical-align middle

.file-upload
  display block
  margin-bottom .8rem
  margin-top .8rem
  input
    display none
  &__label
    cursor pointer
    font-size 1.4rem
    font-weight 700
    letter-spacing .5px
    padding .5em 0
    text-transform uppercase
    transition $transition
    &:hover
      color $primary




@media(max-width 1500px)
  .clicker
    margin-right 1.2rem
    input
      padding-left 0
      padding-right 0
      width 5.6rem
    &__minus,
    &__plus
      padding 1.4rem 2.4rem


@media(max-width 1000px)
  .tabs
    &__header
      // overflow hidden
      overflow-x scroll
      margin-left -2.4rem
      margin-right -2.4rem
      justify-content initial
      padding 0 2.4rem
      -webkit-overflow-scrolling touch
    &__content
      padding 0
    &__link
      font-size 1.4rem
      padding 1em .5em
      &:last-child
        margin-right 2.4rem




@media(max-width 767px)
  .btn
    padding 1.4em 1.2em




