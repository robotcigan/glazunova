@media(max-width 1200px)
  h1, .h1
    font-size 5.6rem
    &_long
      font-size 4rem
  h2, .h2
    font-size 4.8rem
  h3, .h3
    font-size 4rem
  // h4, .h4
  //   font-size 1.8rem
  ul
    padding-left 1.6rem
    li
      &:before
        left -1.6rem

@media(max-width 767px)
  h1, .h1
    font-size 3.2rem
    margin-bottom .25em
    &_long
      font-size 2.4rem
  h2, .h2
    font-size 2.4rem
  h3, .h3
    font-size 2.4rem
  h4, .h4
    font-size 1.8rem
  p
    font-size 1.4rem
  ul
    // padding-left 0
    li
      font-size 1.4rem
  .ul-animation.animated li:before
    width 1.6rem
  blockquote
    font-size 2rem
    margin-bottom 2rem
    margin-left -1.2rem
    margin-right -1.2rem
    padding 1.6rem 3.6rem 1.6rem 1.2rem
    // &:before
    //   content none
    &:before
      background-position top right
      height 2rem
      left initial
      right .8rem
