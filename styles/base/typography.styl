small
  color $gray
  display block
  font-size 1.2rem
  line-height 1.6
  margin-bottom 2em
  a
    color $main
    linkHover($primary)

strong
  display block
  font-size 1.8rem
  letter-spacing -.5px
  line-height 1.5
  font-weight 500
  margin-bottom .7em

.header-center
  text-align center

ol
  margin 0
  margin-bottom 2.5em
  padding 0
  padding-left 1.2em
  li
    // display block
    font-size 1.8rem
    font-weight 300
    line-height 1.6
    margin-bottom .5em
    // margin-left 1em
    margin-left 0
    position relative
    vertical-align top
    // &:before
    //   display inline-block
    //   content counter(item) ". "
    //   counter-increment item
    //   font-family $font-secondary
    //   font-size 1em
    //   left -6.4rem
    //   line-height 1
    //   position absolute
    //   top -2rem

ul
  margin 0
  margin-bottom 2em
  list-style-type none
  // padding-left 1em
  padding-left 0
  li
    font-size 1.8rem
    line-height 1.6
    margin-bottom .75em
    margin-left 0
    position relative
    vertical-align top
    &:before
      background-color $gray
      border-radius 50%
      content ''
      left -1.2em
      position absolute
      size(6px)
      top .6em
      transition width 1s cubic-bezier(.4,0,0,1) .4s

blockquote
  border-bottom 1px solid $primary
  border-top 1px solid $primary
  font-size 3.2rem
  line-height (44 / 32)
  margin 0
  margin-bottom 4rem
  margin-left -10rem
  margin-right -10rem
  padding 3.2rem 6.4rem 4.8rem 10rem
  position relative
  &:before
    // content url('../../img/quote.svg')
    background url('../../img/quote.svg') no-repeat top left / contain
    content ''
    left 0
    height 4rem
    position absolute
    top 1.2em
    width 4.8rem


