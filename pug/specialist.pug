  main.content
    section.section
      .spec-page.wrapper
        .spec-page__container.container
          .col.col--lg-6.spec-page__left
            .spec-page__left-container
              .labels
                .label Невролог-эпилептолог
                .label Врач высшей категории 
              h1.spec-page__title Данилова Екатерина Владимировна
