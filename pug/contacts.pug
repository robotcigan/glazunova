extends layout.pug

block content
  main.content
    .wrapper
      section.inner-block.section
        .inner-block__left
          .inner-header.wow
            .inner-header__label Мы будем рады пообщаться с вами лично
            h1.inner-header__title Контакты
            .container
              .col.col--sm-4
                .contacts-info
                  p.contacts-info__address Краснодар, ул. Шоссе Нефтяников 37/5
                  a(href="mailto:clinicglazunova@gmail.com").contacts-info__mail clinicglazunova@gmail.com
                  a(href="tel:+79184514843").contacts-info__phone +7 (918) 451-48-43
                  a(href="https://yandex.ru/maps/35/krasnodar/?rtext=~45.065896, 38.982832" target="_blank").route
                    .route__icon
                      img(src="./img/route.svg", alt="")
                    .route__text Проложить маршрут
              .col.col--sm-4
                .worktime
                  strong Временное расписание работы
                  .worktime__line
                    .worktime__day Понедельник
                    .worktime__time 9:00 - 19:00
                  .worktime__line
                    .worktime__day Вторник
