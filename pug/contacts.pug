                  .worktime__line
                    .worktime__day Среда
                    .worktime__time 9:00 - 19:00
                  .worktime__line
                    .worktime__day Четверг
                    .worktime__time 8:00 - 19:00
                  .worktime__line
                    .worktime__day Пятница
                    .worktime__time 9:00 - 19:00
                  .worktime__line
                    .worktime__day Суббота
                    .worktime__time 9:00 - 19:00
                  .worktime__line
                    .worktime__day Воскресенье
                    .worktime__time 10:00 - 16:00
              .col.col--sm-4
                .socials.contacts-socials
                  a(href="").social.social_insta
                    img(src="./img/insta.svg", alt="")
                  a(href="").social.social_vk
                    img(src="./img/vk.svg", alt="")
                  a(href="").social.social_facebook
                    img(src="./img/facebook.svg", alt="")


        .inner-block__right
          a(href="").sticky-btn
            .sticky-btn__text-container
              .sticky-btn__text Оплатить онлайн
            .sticky-btn__icon
              img(src="./img/sticky-payment.svg", alt="")

